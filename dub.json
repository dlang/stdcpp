{
    "name": "stdcpp",
    "description": "Bindings for the C++ standard library.",

    "license": "BSD-2",
    "authors": [ "The D Language Foundation" ],
    "copyright": "Copyright Â© 2023, The D Language Foundation",

    "configurations": [
        {
            "name": "library",
            "excludedSourceFiles": [ "source/stdcpp/test/*" ]
        },
        {
            "name": "unittest",
            "lflags": [ "-lstdc++" ],
            "preGenerateCommands": [
                "clang++ -c extras/vector.cpp -o extras/vector.o",
		"clang++ -c extras/list.cpp -o extras/list.o"
            ],
            "sourceFiles": [ "extras/*.o" ]
        },
        {
            "name": "unittest-gcc",
            "lflags": [ "-lc++" ],
            "preGenerateCommands": [
                "g++ -c extras/vector.cpp -o extras/vector.o",
		"g++ -c extras/list.cpp -o extras/list.o"
            ],
            "sourceFiles": [ "extras/*.o" ]
        }
    ]
}
